            }
          ]
        },
        "options": {}
      },
      "name": "Ollama",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [460, 300],
      "id": "ollama-1"
    },
    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst result = [];\n\nfor (let i = 0; i < items.length; i++) {\n  const item = items[i];\n  const message = item.json.message || {};\n  const content = message.content || '';\n  \n  let action = 'help';\n  let target = null;\n  let mode = 'standard';\n  \n  const match = content.match(/\\{[^}]+\\}/);\n  if (match) {\n    const parsed = JSON.parse(match[0]);\n    if (parsed) {\n      action = parsed.action || 'help';\n      target = parsed.target || null;\n      mode = parsed.mode || 'standard';\n    }\n  }\n  \n  result.push({\n    json: {\n      action: action,\n      target: target,\n      mode: mode\n    }\n  });\n}\n\nreturn result;"
      },
