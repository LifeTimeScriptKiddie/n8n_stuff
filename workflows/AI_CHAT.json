    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst result = [];\n\nfor (let i = 0; i < items.length; i++) {\n  const item = items[i];\n  let response = '';\n  \n  if (item.json.success !== undefined) {\n    if (item.json.success) {\n      response = 'Scan started! Target: ' + item.json.target + ', Job: ' + item.json.scan_job_id;\n    } else {\n      response = 'Scan failed: ' + (item.json.error || 'Unknown error');\n    }\n  } else if (item.json.id) {\n    response = 'Status: ' + item.json.target + ' - ' + item.json.status;\n  } else {\n    response = 'Commands: \"scan TARGET\", \"status\", \"help\"';\n  }\n  \n  result.push({\n    json: {\n      response: response\n    }\n  });\n}\n\nreturn result;"
